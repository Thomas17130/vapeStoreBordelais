<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <h1>
        Produits
    </h1>
    <a href="{{ path('createEliquid') }}">Ajouter un produit</a>

    <div>
        <h2>Eliquide en stock</h2>
        {% for eliquid in eliquidActive %}
            <a href="{{ path('showEliquid', {'id': eliquid.id}) }}">
                <img src="{{ asset('uploadDirectory/' ~ eliquid.img) }}" alt="Seo Ã  completer">
            </a>

            <p>
                {{ eliquid.name }}
            </p>
            <p>
                {{ eliquid.brand }}
            </p>
            <p>
                {{ eliquid.flavor }}
            </p>
            <p>
                {{ eliquid.price }} euros
            </p>
            <a href="{{ path('updateEliquid', {'id': eliquid.id}) }}">Modifier un produit</a>
        {% endfor %}
    </div>
    <div>
        <h2>Eliquide hors stock</h2>
        {% for eliquid in eliquidUnactive %}
            <p>
                {{ eliquid.name }}
            </p>
            <p>
                {{ eliquid.brand }}
            </p>
            <p>
                {{ eliquid.flavor }}
            </p>
        {% endfor %}
    </div>
</body>
</html>