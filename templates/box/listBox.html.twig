<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('assets/css/products.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/scrollBar.css') }}">
    <title>Les boxs</title>
</head>
<body>
    {{ include('commons/navigation.html.twig') }}
    <main>
        <h1 class="textPage">
           Les Boxs
        </h1>
        <a href="{{ path('createBox') }}">Ajouter un produit</a>
        <section>
            {% for box in boxs %}
            <article class="box">
                        <a href="{{ path('showBox', {'id': box.id}) }}">
                            <img src="{{ asset('uploadDirectory/' ~ box.img) }}" alt="image de la box : {{ box.brand }}">
                        </a>
                        <p>
                            {{ box.brand }}
                        </p>
                        <p>
                            {{ box.price }} euros
                        </p>
                        <p>
                            {{ box.stock > 0 ? (box.stock < 10 ? 'Il n\'en reste que ' ~ box.stock ~ ' en stock' : 'en stock') : 'hors stock' }}
                        </p>
                <a href="{{ path('updateBox', {'id': box.id}) }}">Modifier le produit</a>
                </article>
            {% endfor %}
        </section>
    </main>

</body>
</html>