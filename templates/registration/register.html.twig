<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('assets/css/Account.css') }}">
    <title>S'enregistrer</title>
</head>
<body class="flexColumn">
    {{ include('commons/navigation.html.twig') }}
    {% block body %}
        <main class="mainEliquid">
            <article class="articleCard">
                <div class="formRegister">
                    <h1>S'enregistrer</h1>
                    <div class="form">
                        {{ form_start(registrationForm, {'attr':
                            {'class':'form'}}) }}
                        {{ form_row(registrationForm.lastname, {
                            label:'Pr√©nom','attr':
                            {'class':'form'}}) }}
                        {{form_row(registrationForm.name, {
                            label:'Nom','attr':
                            {'class':'form'}}) }}
                        {{ form_row(registrationForm.dateOfBirth, {
                            label:'Date de naissance','attr':
                            {'class':'form'}}) }}
                        {{ form_row(registrationForm.address, {
                            label:'Adresse','attr':
                            {'class':'form'}}) }}
                        {{ form_row(registrationForm.email, {label:
                            'Email','attr':
                            {'class':'form'}}) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de passe',
                            'attr':{'class':'form'}
                        }) }}
                        {{ form_row(registrationForm.agreeTerms, {'label': 'Accepter les conditions'}) }}
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </article>
        </main>
    {% endblock %}
</body>
</html>


